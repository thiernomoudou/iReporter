{
  "name": "ireporter",
  "version": "1.0.0",
  "description": "A platform for reporting corruption incidents and anythings that needs government intervention ",
  "main": "server/index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "build": "babel server -d dist ",
    "start-dev": "babel-watch server/index.js",
    "start-test": "NODE_ENV=test babel-watch server/index.js",
    "start": "node  dist/index.js",
    "test": "NODE_ENV=test npm run drop-tables && npm run create-tables && npm run insert-user-record && nyc --reporter=html --reporter=text mocha tests/**/**.spec.js --exit --timeout=5000 --compilers js:babel-core/register",
    "lint": "eslint server",
    "lint-fix": "eslint server --fix",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "coveralls": "npm test && nyc --reporter=lcov --reporter=text-lcov",
    "heroku-postbuild": "npm run build",
    "create-user-table": "node server/database/models.js createUserTable",
    "create-incident-table": "node server/database/models.js createIncidentTable",
    "drop-user-table": "node server/database/models.js dropUserTable",
    "drop-incident-table": "node server/database/models.js dropIncidentTable",
    "create-tables": "npm run create-user-table && npm run create-incident-table",
    "drop-tables": "npm run drop-user-table && npm run drop-incident-table",
    "insert-user-record": "node server/database/models.js insertUserRecord"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thiernomoudou/iReporter.git"
  },
  "keywords": [
    "corruption",
    "intervention",
    "node",
    "express"
  ],
  "author": "Thierno Souleymane Diallo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thiernomoudou/iReporter/issues"
  },
  "homepage": "https://github.com/thiernomoudou/iReporter#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "babel-watch": "^2.0.7",
    "chai": "^4.2.0",
    "chai-http": "^4.2.0",
    "coveralls": "^3.0.2",
    "eslint": "^5.9.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "mocha": "^5.2.0",
    "nock": "^10.0.2",
    "nyc": "^13.1.0",
    "prettier": "^1.15.2"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "bcrypt": "^3.0.2",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-validator": "^5.3.0",
    "jsonwebtoken": "^8.4.0",
    "make-runnable": "^1.3.6",
    "moment": "^2.22.2",
    "morgan": "^1.9.1",
    "pg": "^7.7.1",
    "uuid": "^3.3.2"
  },
  "engines": {
    "node": "10.x"
  }
}
